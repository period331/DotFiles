[user]
    name = baocaixiong
    email = baocaixiong@gmail.com
[advice]
    statusHints = false
[alias]
    a   = add
    b   = branch -v
    m   = merge
    mt  = mergetool
    nc  = checkout -b
    pl  = pull
    plr = pull --rebase
    pu  = push
    untrack = rm -r --cached
    dupes = !git ls-tree -r HEAD | cut -c 13- | sort | uniq -D -w 40

    # commit
    c = commit
    ca = commit -a
    co = checkout
    cv = commit -v
    cav = commit -av

    # fetch
    fetchall = fetch -v --all
    # diff
    d   = diff
    dc  = diff --cached
    wd  = diff --word-diff=plain
    last = diff HEAD^

    # grep
    gr = grep -Ii

    # log
    l = log
    lp = log -p
    ls = log --pretty=format:\"%h %cr %cn %Cgreen%s%Creset\"
    lc = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset' --abbrev-commit --date=relative
    lg = log --graph

    # rebase
    rb = rebase
    rc = rebase --continue
    rs = rebase --skip

    # remote
    r = remote

    # reset
    unstage = reset HEAD

    # stash
    ss = stash
    sl = stash list
    sa = stash apply

    # status
    s = status -s
    st = status

    # branch
    br = branch

    # tag
    t = tag

    # misc
    save-untracked = !git ls-files --others --exclude-standard -z | cpio -pmd0
[branch]
    autosetuprebase = always
[color]
    ui = true
    status = auto
    grep = always
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    old = red bold
    new = green bold
    frag = magenta bold
[github]
    user = baocaixiong
[merge]
    tool = vimdiff
[push]
    default = tracking
[url "git://github.com/"]
    insteadOf = gh:

[difftool]
    prompt = false

[megretool]
    prompt = false

[core]
    editor = vim
    quotepath = false
